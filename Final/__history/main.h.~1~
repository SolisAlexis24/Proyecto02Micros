#include <16F877A.h>
#device ADC=10
#use delay(crystal=20MHz,restart_wdt)
#use FIXED_IO( B_outputs=PIN_B7,PIN_B6,PIN_B5,PIN_B4,PIN_B3,PIN_B2,PIN_B1,PIN_B0 )
#use FIXED_IO( C_outputs=PIN_C2,PIN_C1,PIN_C0 )
#define L0	PIN_B0
#define L1	PIN_B1
#define L2	PIN_B2
#define L3	PIN_B3
#define L4	PIN_B4
#define L5	PIN_B5
#define L6	PIN_B6
#define L7	PIN_B7
#define IN1	PIN_C0
#define IN2	PIN_C1
#define EN1	PIN_C2
#define RX	PIN_C6
#define TX	PIN_C7


